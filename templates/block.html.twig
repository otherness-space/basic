<div{{ attributes.addClass('clearfix') }}>
  <div class="block-inner">

    {{ title_prefix }}
    {% if label %}
      <h2{{ title_attributes.addClass('block-title') }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}

    <div{{ content_attributes.addClass('content') }}>
      {{ content }}
    </div>
  </div>
</div>
